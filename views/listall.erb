<h1><%= @title %></h1>

<div class="col-xs-12 col-sm-6">
	<div class="list-group">
		<% @songs.each do |song| %>
			<button value="<%= song.file %>" class="add list-group-item"> 
				<span> <%= song.title %> </span>
				<%# = url('/add/#{song.file}') %>
				<span> <%= song.onair.strftime("%y/%m/%d %H:%M") %> </span>
				<span> <%= (Time.parse("1/1") + song.time).strftime("%H:%M:%S") %> </span>
			</button>
			
		<% end %>
	</div>
</div>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="js/bootstrap.min.js"></script>

<script type="text/javascript">
  $(function () {
    $('.add').on('click', function (eo) {
      var file = eo.target.value;
      var url = '<%= url('/add/') %>' + file;
      console.log(url);
      $.ajax({
      	type: 'POST',
      	url: url, 
      	// dataType: 'json',
      	success: function (json) {
      		console.log(json);
      	},
      	error: function (error) {
      		console.log('error: '+error);
      	}
      });
    });
  });
</script>
